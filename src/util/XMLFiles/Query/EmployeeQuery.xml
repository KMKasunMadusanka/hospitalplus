<root>
    <query key="Employee_Regiter_Insert">
        <entry>INSERT INTO Employee (FirstName,LastName,Email,Password) VALUES (?, ?, ?, ?)</entry>
    </query>
    <query key="Employee_Edit_SelectAll">
        <entry>SELECT * FROM Employee</entry>
    </query>
    <query key="Employee_Edit_SelectAllById">
        <entry>SELECT * FROM Employee WHERE Id IN (?) </entry>
    </query>
    <query key="Employee_Single_Update">
        <entry>UPDATE Employee SET FirstName = ? ,LastName = ? ,Email = ? ,Password = ? ,DOB = ? ,NIC = ? ,Address =? WHERE Id = ? </entry>
    </query>
    <query key="Employee_Edit_Update">
        <entry>UPDATE Employee SET FirstName = ? ,LastName = ? ,Email = ? ,Password = ? ,DOB = ? ,NIC = ? ,Gender = ? ,Possition = ? ,Address =? WHERE Id = ? </entry>
    </query>
