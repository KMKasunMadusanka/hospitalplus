        <entry>DELETE FROM Employee WHERE Id = ?</entry>
    </query>
    
    <query key="Employee_Basic_Details">
        <entry>SELECT Id,FirstName,LastName,Email FROM Employee WHERE Id IN (?) </entry>
    </query>
    
    <query key="Leave_allData_ByEmpId">
        <entry>SELECT * FROM `Leave` WHERE EmpId IN (?)</entry>
    </query>
    
    <query key="Leave_Insert">
        <entry>INSERT INTO `Leave` (`EmpId`, `Date`, `Description`, `Reporting_Manager`, `Status`) VALUES (?, ?, ?, ?, ?)</entry>
    </query>
    
    <query key="Login_GetData">
        <entry>SELECT Id,FirstName,Possition FROM Employee WHERE Email =? AND Password= ?</entry>
    </query>
    
