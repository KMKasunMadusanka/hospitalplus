<root>
    <query key="addDrugCategory">
        <entry>INSERT INTO drug_categories(name, description) VALUES(?, ?)</entry>
    </query>
    <query key="getAllDrugCategories">
        <entry>SELECT * FROM drug_categories</entry>
    </query>
    <query key="updateDrugCategory">
        <entry>UPDATE drug_categories SET name = ?, description = ? WHERE id = ?</entry>
    </query>
    <query key="removeDrugCategory">
        <entry>DELETE FROM drug_categories WHERE id = ?</entry>
    </query>

    <query key="addDrugType">
        <entry>INSERT INTO drug_types(name, description) VALUES(?, ?)</entry>
    </query>
    <query key="getAllDrugTypes">
        <entry>SELECT * FROM drug_types</entry>
    </query>
    <query key="updateDrugType">
        <entry>UPDATE drug_types SET name = ?, description = ? WHERE id = ?</entry>
    </query>
    <query key="removeDrugType">
        <entry>DELETE FROM drug_types WHERE id = ?</entry>
    </query>

    <query key="addDrug">
        <entry>INSERT INTO drugs(name, category, type, price, 
            remarks, drug_level, reorder_level, weight) VALUES 
            (?, ?, ?, ?, ?, ?, ?, ?)</entry>
    </query>
    <query key="getAllDrugs">
        <entry>SELECT * FROM drugs</entry>
    </query>
    <query key="updateDrug">
        <entry>UPDATE drugs SET name = ?, category = ?, type = ?, price = ?,
            remarks = ?, drug_level = ?, reorder_level = ?, weight = ? WHERE id = ?</entry>
    </query>
    <query key="removeDrug">
        <entry>DELETE FROM drugs WHERE id = ?</entry>
    </query>
    <query key="addOrder">
        <entry>INSERT INTO orders(supplier, drug, qty, pending) VALUES(?, ?, ?, ?)</entry>
    </query>
    <query key="getAllOrders">
        <entry>SELECT * FROM orders WHERE pending = ?</entry>
    </query>
    <query key="updateOrder">
        <entry>UPDATE orders SET pending = ? WHERE id = ?</entry>
    </query>
</root>
